<div class="movie-evaluation" data-score="<%= @review.rate %>"></div>

<script>
  $('.movie-evaluation').raty({
    readOnly: true,
    score: function() {
      return $(this).attr('data-score');
    },
    path: '/assets/'
  });
</script>

<%= @review.movie.title %>
<%= @review.movie.release_date %>
<%= @review.movie.overview %>
<%= image_tag 'https://image.tmdb.org/t/p/w1280' + @review.movie.poster_path, class: "image" %>

<%= @review.title %>
<%= @review.body %>


<h2><% if current_user.already_liked?(@review) %>
  <%= link_to "取り消し", destroy_like_path(@review), method: :DELETE%>
<% else %>
  <%= link_to '保存', create_like_path(@review), method: :POST %>
<% end %></h2>